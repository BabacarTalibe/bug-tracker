pipeline {
    agent any
    /*Pour executer les tests unitaires du backend aavec le plugin Go*/
    /*tools {go 'Go-1.25.5'}*/
    environment {
        // Force Go à utiliser le dossier de travail pour son cache
        GOCACHE = "${WORKSPACE}/.cache"
        // Optionnel : si tu as des problèmes de modules
        GOPATH  = "${WORKSPACE}/go"
    }

    stages {
        stage('Unit Tests - Backend') {
            agent {
              docker {
                image 'snakee/golang-junit:1.21'
                  // On s'assure que Go peut écrire ses outils et son cache
                args '-u root' 
                reuseNode true
              }
            }
    
            steps {
                dir('bugtracker-backend') {
                    sh 'go version'
                    // On crée le dossier de cache manuellement par sécurité
                    sh 'mkdir -p .cache'
                    sh 'go test -v ./...'
                }
            }
        }
        stage('Unit Tests - Frontend') {
            agent {
              docker {
                image 'node:20-alpine'
                reuseNode true
              }
            }
            steps {
                dir('bugtracker-frontend') {
                    sh '''
                      npm ci
                      npm test
                    '''
                }
            }
        }
    }
}